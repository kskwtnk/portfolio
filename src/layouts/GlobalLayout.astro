---
import "@fontsource/shippori-mincho/400.css";
import "@fontsource/shippori-mincho/700.css";
import { ClientRouter } from "astro:transitions";
import Grainy from "../components/Grainy.astro";
import "../styles/global.css";
const { title, excerpt = "綿貫佳祐のポートフォリオ" } = Astro.props;
const pageTitle = title ? `${title} | 綿貫佳祐` : "綿貫佳祐";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={excerpt} />

    <!-- OGP Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={excerpt} />
    <meta property="og:site_name" content="綿貫佳祐" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={excerpt} />

    <ClientRouter />
  </head>
  <body
    class="flex min-h-screen flex-col bg-zinc-100 font-serif wrap-anywhere text-zinc-950 antialiased [line-break:strict] [text-autospace:normal]"
  >
    <Grainy />
    <slot />
    {
      /* iOS 26.0 Safari タブバー表示調整ハック */
      /* iOS 26.0ではSafariのタブバーがbody色を参照し意図しない透過が発生するため、 */
      /* 画面上下に最小限の高さのダミーブロックを配置して色を制御 */
    }
    <div
      class="pointer-events-none fixed top-0 h-[5px] w-full bg-black mix-blend-lighten"
    >
    </div>
    <div
      class="pointer-events-none fixed bottom-0 h-[5px] w-full bg-black mix-blend-lighten"
    >
    </div>
  </body>
</html>
